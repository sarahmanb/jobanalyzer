{
    "name": "sarahmnab/jobanalyzer",
    "description": "An intelligent job search companion that helps you tailor your resume and cover letter as per keywords in job description.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "S A Rehman Bukhari",
            "email": "sarahmanb@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "illuminate/database": "^10.0",
        "vlucas/phpdotenv": "^5.5",
        "twig/twig": "^3.7",
        "guzzlehttp/guzzle": "^7.8",
        "smalot/pdfparser": "^2.7",
        "spatie/pdf-to-text": "^1.52",
        "tecnickcom/tcpdf": "^6.6",
        "respect/validation": "^2.2",
        "firebase/php-jwt": "^6.8",
        "league/flysystem": "^3.15",
        "symfony/process": "^6.3",
        "ramsey/uuid": "^4.7",
        "nesbot/carbon": "^2.69",
        "monolog/monolog": "^3.4",
        "psr/container": "^2.0",
        "php-di/php-di": "^7.0",
        "intervention/image": "^2.7",
        "league/csv": "^9.11",
        "dompdf/dompdf": "^2.0",
        "phpoffice/phpword": "^1.1",
        "phpoffice/phpspreadsheet": "^1.29"
   }

       "require-dev": {
        "phpunit/phpunit": "^10.3",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "fakerphp/faker": "^1.23",
        "symfony/var-dumper": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 app/",
        "cs-fix": "phpcbf --standard=PSR12 app/",
        "analyse": "phpstan analyse app --level=5",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-update-cmd": [
            "@php artisan cache:clear",
            "@php artisan config:clear"
        ],
        "install-python-deps": [
            "cd python_services && pip install -r requirements.txt"
        ],
        "setup-db": [
            "@php database/setup.php"
        ],
        "dev-setup": [
            "composer install",
            "@setup-db",
            "@install-python-deps"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "platform": {
            "php": "8.0"
        }
    },
    "suggest": {
        "ext-gd": "Required for image processing",
        "ext-zip": "Required for file compression",
        "ext-curl": "Required for HTTP requests",
        "ext-json": "Required for JSON processing",
        "ext-pdo_mysql": "Required for MySQL database connection",
        "ext-mbstring": "Required for multi-byte string processing",
        "ext-fileinfo": "Required for file type detection",
        "ext-openssl": "Required for secure HTTP requests"
    }
}
